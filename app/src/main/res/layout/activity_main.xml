<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.ankita.fav5.MainActivity">

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="2">


        <TextView
            android:id="@+id/music_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/music"
            android:text="@string/Music"
            android:textAlignment="center"
            style="@style/textStyle"
           android:onClick="openDetail"

            />

        <TextView
            android:id="@+id/photog_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/photog"
            android:text="@string/Photography"
            android:textAlignment="center"
            style="@style/textStyle"
            android:onClick="openDetail"



            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="2">


        <TextView
            android:id="@+id/paint_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/paint1"
            android:onClick="openDetail"
            android:text="@string/Painting"
            android:textAlignment="center"
            style="@style/textStyle"


            />

        <TextView
            android:id="@+id/tech_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/it"
            android:text="@string/Tech"
            android:textAlignment="center"
            style="@style/textStyle"
            android:elegantTextHeight="true"
            android:onClick="openDetail"

            />


    </LinearLayout>
    <LinearLayout
    android:id="@+id/row3"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="0dp"
    android:layout_weight="2">


    <TextView
        android:id="@+id/travel_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/travelling"
        android:onClick="openDetail"
        android:text="@string/Travelling"
        android:textAlignment="center"
        style="@style/textStyle"




        />

    <TextView
        android:id="@+id/cooking_textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/cook"
        android:text="@string/Cooking"
        android:textAlignment="center"
        style="@style/textStyle"
        android:onClick="openDetail"



        />


</LinearLayout>
</LinearLayout>
